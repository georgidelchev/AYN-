@model AYN.Web.ViewModels.Users.ListUserAdsViewModel

<div class="card">
    <div class="card-body">
        <div class="text-center">
            <h3 class="card-title">All Ads</h3>
        </div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{ var counter = 1;}
                @foreach (var image in this.Model.Ads)
                {
                    <div class="carousel-@(counter == 1 ? "item active" : "item")">
                        <a asp-controller="Ads" asp-action="Details" asp-route-id="@image.Id"><img class="d-block w-100" src="@image.ImageUrl"></a>
                        <div class="text-center">
                            <h6 class="text-danger">@image.Name</h6><br/>
                        </div>
                    </div>

                    counter++;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>