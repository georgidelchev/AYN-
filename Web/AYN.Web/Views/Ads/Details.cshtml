@{
    this.ViewData["Title"] = "Ad Details";
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <small class="text-muted">123 views</small>
                <div id="carouselExampleIndicators" class="carousel slide" data-interval="false" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/img/AdsPictures/1-a60fc68c-e673-4ecf-bb05-0d405ad97d13.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/img/AdsPictures/1-a60fc68c-e673-4ecf-bb05-0d405ad97d13.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/img/AdsPictures/1-a60fc68c-e673-4ecf-bb05-0d405ad97d13.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <h3 class="text-center text-primary">
                        Selling refrigerator to cool some beer in this hot summer.
                    </h3>
                </div>
            </div>
            <hr/>
            <div class="card-body">
                <span class="float-left text-primary font-weight-normal">
                    <i class="fas fa-map-marked"></i> Stara Zagora<br />
                    <i class="fas fa-truck"></i> Buyer
                </span>
                <span class="text-primary font-weight-normal float-right">
                    <i class="fas fa-cloud-upload-alt"></i> 15/02/2020<br />
                    <i class="fas fa-sync-alt"></i> 15/02/2020
                </span>
                
            </div>
            <hr/>
        </div>
    </div>
    <div class="col-md-3">
        <div class="bg-primary font-weight-bolder">
            <h1 class="text-white text-center"><i class="fas fa-tag"></i> 5 $</h1>
        </div>
        <div class="bg-primary font-weight-bolder">
            <h2 class="text-white text-center"><i class="fas fa-mobile-alt"></i> 1234567890</h2>
        </div>
        <div class="card-deck">
            <div class="card">
                <img class="card-img-top" src="/img/AdsPictures/2-286c4f21-1875-4363-be62-ddc8ac514257.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title text-center">Gosko123</h5>
                    <p class="card-text text-center"><small class="text-muted">In AYN Since: 21/05/2020</small></p>
                    <hr />
                    <div class="text-center">
                        <a href="" class="text-primary text-center">123 active ads</a>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="text-center">
            <a href="" class="text-danger text-center">Report this ad</a>
        </div>
    </div>
</div>

