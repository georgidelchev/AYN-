@model AYN.Web.ViewModels.Administration.Ads.ListAllAdsViewModel

@{
    this.ViewData["Title"] = "All Ads";
}

<div class="text-center">
    <h1>All Ads</h1>
</div>

<partial name="_PagingPartial" model="@this.Model" />
<div class="table-responsive">
    <table class="table table-sm table-hover ">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Owner</th>
                <th scope="col">Created On</th>
                <th scope="col">Archived</th>
                <th scope="col">Deleted</th>
                <th scope="col">Promoted</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ad in this.Model.AllAds)
            {
                <tr>
                    <th><a asp-area="" asp-controller="Users" asp-action="Profile" asp-route-id="@ad.AddedByUserId">@ad.AddedByUserUsername</a></th>
                    <th>@ad.Name</th>
                    <th>@ad.CreatedOn.ToString("d")</th>
                    <th>
                        @if (ad.IsArchived)
                        {
                        }
                        else
                        {
                            <div class="pl-4">
                                <i class="fas fa-times text-primary"></i>
                            </div>
                        }
                    </th>
                    <th>
                        @if (ad.IsDeleted)
                        {
                        }
                        else
                        {
                            <div class="pl-4">
                                <i class="fas fa-times text-primary"></i>
                            </div>
                        }
                    </th>
                    <th>
                        @if (ad.IsPromoted)
                        {
                        }
                        else
                        {
                            <div class="pl-4">
                                <i class="fas fa-times text-primary"></i>
                            </div>
                        }
                    </th>
                    <th>
                        <div class="dropdown dropleft">
                            <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropleft
                            </button>
                            <div class="dropdown-menu">
                                <a asp-controller="Ads" asp-action="Archive" asp-route-id="@ad.Id" class="dropdown-item">Archive</a>
                                <a asp-controller="Ads" asp-action="UnArchive" asp-route-id="@ad.Id" class="dropdown-item">UnArchive</a>
                                <a asp-controller="Ads" asp-action="Delete" asp-route-id="@ad.Id" class="dropdown-item">Delete</a>
                                <a asp-controller="Ads" asp-action="UnDelete" asp-route-id="@ad.Id" class="dropdown-item">UnDelete</a>
                                <a asp-controller="Ads" asp-action="Promote" asp-route-id="@ad.Id" class="dropdown-item">Promote</a>
                                <a asp-controller="Ads" asp-action="UnPromote" asp-route-id="@ad.Id" class="dropdown-item">UnPromote</a>
                            </div>
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>
<partial name="_PagingPartial" model="@this.Model" />