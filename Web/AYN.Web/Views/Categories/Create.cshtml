@model AYN.Web.ViewModels.Categories.CreateCategoryInputModel

@{
    this.ViewData["Title"] = "Create Category";
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

<form method="post" class="col-md-6 offset-md-3 text-center" enctype="multipart/form-data">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <span asp-validation-for="Name" class="text-danger"></span>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label asp-for="Name" class="input-group-text">
                    <i class="fas fa-file-signature"></i>
                </label>
            </div>
            <input asp-for="Name" placeholder="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="customFile">Upload Picture</label>
        <input type="file" class="form-control-file" id="customFile" asp-for="Picture" />
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>

    <hr />
    <h5>Add subCategories (optional)</h5>
    <div id="SubCategoriesContainer">
        <a class="btn btn-success btn-sm" onclick="AddSubCategory()"><i class="fas fa-plus"></i></a><br />
    </div>
    <hr />

    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
    <hr />
</form>

@section Scripts {
    <script>
        var subCategoryIndex = 0;

        function AddSubCategory() {
            $("#SubCategoriesContainer").
                append("<div class='input-group mb-3'>" +
                    "<div class='input-group-prepend'>" +
                    "<label for='subCategoryName" + subCategoryIndex + "'" + "class='input-group-text'>" +
                    "<i class='fas fa-file-signature'></i>" +
                    "</label>" +
                    "</div>" +
                    "<input type='text' placeholder='Name' name='SubCategories[" + subCategoryIndex + "].Name' id='subCategoryName" + subCategoryIndex + "'" + " class='form-control' />" +
                    "</div>");

            subCategoryIndex++;
        }
    </script>
}