@model AYN.Web.ViewModels.Administration.Categories.EditCategoryInputModel

@{
    this.ViewData["Title"] = "Edit Category";
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

<form method="post" class="col-md-6 offset-md-3 text-center" enctype="multipart/form-data">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <img src="/img/CategoriesPictures/@Model.Id.@Model.PictureExtension" class="rounded-circle category-image" alt="@Model.Name">
    <br />
    <br />
    <div>
        <span asp-validation-for="Name" class="text-danger"></span>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label asp-for="Name" class="input-group-text">
                    <i class="fas fa-file-signature"></i>
                </label>
            </div>

            <input asp-for="Name" placeholder="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="customFile">Change the category picture<br />(optional)</label>
        <input type="file" class="form-control-file" id="customFile" asp-for="Picture" />
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
    <hr />
</form>