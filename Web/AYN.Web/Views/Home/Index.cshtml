@{
    this.ViewData["Title"] = "Home";
}

<form method="get" asp-controller="Ads" asp-action="GetFromSearch" class="px-3">
    <div class="p-1 bg-light rounded rounded-pill shadow-sm mx-auto mb-5 mt-4 col-md-6">
        <div class="input-group">
            <input name="search" type="search" placeholder="Search by keywords, sentence or some text..." class="form-control border-1 bg-white">
            <div class="input-group-append">
                <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </div>
</form>

<div class="card col-md-12">
    <hr />
    <div class="card-body">
        <div class="text-center">
            <h4>Search products by our main categories</h4>
        </div>
        <br />
        @await Component.InvokeAsync("GetAllCategoriesWithTheirSubCategories")
    </div>
    <hr />
</div>
<br/>

<div class="text-center">
    <h3>Recent Promoted Ads</h3>
</div>

<div class="text-center">
    <h3>Recent Ads</h3>
</div>
@await Component.InvokeAsync("GetRecentAds")
