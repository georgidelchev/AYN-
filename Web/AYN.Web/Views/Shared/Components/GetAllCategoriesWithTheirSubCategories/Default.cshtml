@using AYN.Common

@model AYN.Web.ViewModels.Categories.ListAllCategoriesViewModel

<script>
    $(document).ready(function () {
        $(".dropdown").hover(function () {
            var dropdownMenu = $(this).children(".dropdown-menu");
            if (dropdownMenu.is(":visible")) {
                dropdownMenu.parent().toggleClass("open");
            }
        });
    });
</script>

<div class="row">
    @foreach (var (key, value) in this.Model.AllCategoriesWithAllSubCategories)
    {
        <div class="col-md-3 nav-item text-center">
            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                <div>
                    <button class="btn btn-sm" data-toggle="tooltip" data-placement="bottom" title="Add SubCategory" href="#">
                        <i class="fas fa-plus text-decoration-none text-warning"></i>
                    </button>
                    <button class="btn btn-sm" data-toggle="tooltip" data-placement="bottom" title="Edit" href="#">
                        <i class="fas fa-edit text-decoration-none text-primary"></i>
                    </button>
                    <form method="post" id="deleteForm" asp-controller="Categories" asp-action="Delete" asp-route-id="@key.Id">
                    </form>
                    <button class="btn btn-sm" data-toggle="modal" data-placement="bottom" title="Delete" data-target="#deleteModal">
                        <i class="fas fa-times text-decoration-none text-danger"></i>
                    </button>
                </div>
            }
            <div class="dropdown mb-5">
                <div class="text-center">
                    <img src="/img/CategoriesPictures/@key.Id.@key.PictureExtension" class="rounded-circle category-image" alt="@key.Name">
                    <h6>@key.Name</h6>
                    <h6>@value.Sum(v => v.AdsCount) Ads</h6>

                </div>
                @if (value.Any())
                {
                    <div class="dropdown-menu">
                        @foreach (var subCategory in value)
                        {
                            <a href="/">@subCategory.Name</a><text> - @subCategory.AdsCount Ads</text><br>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content text-center">
            <div class="modal-body">
                <h2 class="text-warning">Are you sure?</h2>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-danger btn-sm" onclick="deleteForm.submit()"><i class="fas fa-check"></i></button>
                <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal"><i class="fas fa-times"></i></button>
            </div>
        </div>
    </div>
</div>
